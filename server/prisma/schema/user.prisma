model User {
  id    String @id @default(uuid()) @db.Uuid
  slug  String @unique
  email String @unique

  display_name String?

  role String @default("default")

  password String

  level Int @default(1)
  exp   Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  votes       FigureTagVote[]
  figure_tags FigureTag[]
  tags        Tag[]
}
