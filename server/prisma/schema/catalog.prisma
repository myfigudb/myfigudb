model Tag {
  id    String @id @default(uuid()) @db.Uuid
  label String @unique

  figures Figure[]

  @@map("tag")
}

model Reseller {
  id   String @id @default(uuid()) @db.Uuid
  name String @unique
  url  String

  listings FigureListing[]

  @@map("reseller")
}

model Material {
  id   String  @id @default(uuid()) @db.Uuid
  name String  @unique
  url  String?

  figures Figure[]

  @@map("material")
}

model Editor {
  id   String @id @default(uuid()) @db.Uuid
  name String

  series  Series[]
  figures Figure[]

  @@map("editor")
}

model Series {
  id        String  @id @default(uuid()) @db.Uuid
  name      String
  editor_id String? @db.Uuid //temp

  editor Editor? @relation(fields: [editor_id], references: [id])

  figures Figure[]

  @@map("series")
}

model Character {
  id         String  @id @default(uuid()) @db.Uuid
  name       String
  license_id String? @db.Uuid //temp

  license License? @relation(fields: [license_id], references: [id])

  figures Figure[]

  @@map("character")
}

model License {
  id   String @id @default(uuid()) @db.Uuid
  name String

  characters Character[]

  @@map("license")
}
